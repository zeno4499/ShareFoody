<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundHomeApp"
    android:orientation="vertical"
    tools:context=".View.HomeActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="left"
            app:srcCompat="@drawable/logo" />

        <RadioGroup
            android:id="@+id/radioGroup_anGi_oDau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_radiobuttongroup_homeapp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/odau"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radius_odau"
                android:button="@android:color/transparent"
                android:checked="true"
                android:padding="10dp"
                android:text="@string/odau"
                android:textColor="@drawable/changetxt_radio_homeapp" />


            <RadioButton
                android:id="@+id/angi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_radius_angi"
                android:button="@android:color/transparent"
                android:padding="10dp"
                android:text="@string/angi"
                android:textColor="@drawable/changetxt_radio_homeapp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/themQuanAn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right"
            android:layout_marginRight="18dp"
            app:srcCompat="@drawable/ic_add_white_24dp" />

    </androidx.appcompat.widget.Toolbar>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerHomeApp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">


    </androidx.viewpager.widget.ViewPager>
</LinearLayout>